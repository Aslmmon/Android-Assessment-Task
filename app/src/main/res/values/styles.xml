<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_shape_default_rounded</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="amountEditTextStyle">
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/rounded_edit_text_cornern</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="viewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/white_gray</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="AppSmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>

    </style>

    <style name="small_icons_style">
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
    </style>


    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="toolbarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_shape_rounded_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="toolBarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>