<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.main_screen_user_input.presentation.MainUserInputFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_amount_text"
        style="@style/amountEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:hint="@string/type_amount_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btnPay"
        style="@style/AppButtonStyle"
        android:fontFamily="sans-serif"
        android:text="@string/pay"
        app:finalCornerAngle="@dimen/_50sdp"
        app:initialCornerAngle="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spinning_bar_color="@color/white"
        app:spinning_bar_width="@dimen/_3sdp" />


</androidx.constraintlayout.widget.ConstraintLayout>
